<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginBottom="10dp"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgNotification"
            android:layout_width="110dp"
            android:layout_height="130dp"
            android:src="@drawable/img_1"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/txtNameNotification"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Đơn hàng #123456789 của bạn đã được xác nhận"
                android:textSize="15dp"
                android:textStyle="bold"
                android:layout_marginTop="6dp"/>
            <TextView
                android:id="@+id/txtContentNotification"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lorem ipsum dolor sit amet, nec. "
                android:textSize="12dp"
                android:layout_below="@+id/txtNameNotification"
                android:layout_marginTop="2dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_alignParentBottom="true">
                <TextView
                    android:id="@+id/txtDateNotification"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="18/12/2004"
                    android:textColor="#12D51A"
                    android:textSize="15dp"
                    android:gravity="end"
                    android:textStyle="bold"/>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context=".Activity.EvaluateActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:gravity="center_vertical"
        android:background="@color/white"
        android:layout_marginBottom="3dp">
        <TextView
            android:id="@+id/tvbackMyEvaluate"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:textSize="20dp"
            android:textStyle="bold"
            android:elevation="8dp"
            android:gravity="center"
            android:paddingRight="5dp"
            android:layout_marginLeft="5dp"
            android:layout_centerVertical="true"
            android:background="@drawable/shade_repair"
            android:drawableRight="@drawable/ic_chevron_left_24"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textStyle="bold"
            android:elevation="8dp"
            android:gravity="center"
            android:paddingRight="5dp"
            android:textColor="@color/black"
            android:layout_centerHorizontal="true"
            android:text="My Evaluate"
            android:layout_centerVertical="true"/>
        <TextView
            android:id="@+id/txtAddMyEvalute"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:textSize="20dp"
            android:textStyle="bold"
            android:elevation="8dp"
            android:gravity="center"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            android:background="@drawable/baseline_check_circle_24"
            android:layout_alignParentEnd="true"/>
    </RelativeLayout>

    <ImageView
        android:id="@+id/imgMyEvaluate"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="90dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/anh"/>
    <TextView
        android:id="@+id/txtNameEvaluate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tên sản phẩm"
        android:layout_below="@+id/imgMyEvaluate"
        android:layout_centerHorizontal="true"
        android:textColor="@color/black"
        android:textSize="25dp"
        android:layout_marginTop="20dp"/>
    <RelativeLayout
        android:id="@+id/rltEvaluate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtNameEvaluate">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/imgstarEvaluate1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/baseline_star_grey_24"/>
            <ImageView
                android:id="@+id/imgstarEvaluate2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/baseline_star_grey_24"/>
            <ImageView
                android:id="@+id/imgstarEvaluate3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/baseline_star_grey_24"/>
            <ImageView
                android:id="@+id/imgstarEvaluate4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/baseline_star_grey_24"/>
            <ImageView
                android:id="@+id/imgstarEvaluate5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/baseline_star_grey_24"/>
        </LinearLayout>
    </RelativeLayout>
    <EditText
        android:id="@+id/edtContentEvaluate"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:hint="Nội dung"
        android:padding="10dp"
        android:gravity="top"
        android:layout_marginTop="10dp"
        android:background="@drawable/vien"
        android:layout_below="@+id/rltEvaluate"/>
</RelativeLayout>
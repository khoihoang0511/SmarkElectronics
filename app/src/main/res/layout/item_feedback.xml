<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="15dp">

    <RelativeLayout
        android:id="@+id/rltMyreview2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/imgMyFeedback"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:src="@drawable/anh"/>
        <TextView
            android:id="@+id/txtNameMyFeedback"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="tên sản phẩm"
            android:textSize="20dp"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/imgMyFeedback"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/imgMyFeedback"
            android:paddingLeft="10dp"
            android:layout_below="@+id/txtNameMyFeedback">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imgstarFeedback1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/baseline_star_grey_24"/>
                <ImageView
                    android:id="@+id/imgstarFeedback2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/baseline_star_grey_24"/>
                <ImageView
                    android:id="@+id/imgstarFeedback3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/baseline_star_grey_24"/>
                <ImageView
                    android:id="@+id/imgstarFeedback4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/baseline_star_grey_24"/>
                <ImageView
                    android:id="@+id/imgstarFeedback5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/baseline_star_grey_24"/>
            </LinearLayout>
            <TextView
                android:id="@+id/txtDayMonthYearFeedback"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="18/12/2004"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"/>
        </RelativeLayout>
    </RelativeLayout>
    <TextView
        android:id="@+id/txtContentFeedback"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="nội dụng"
        android:layout_below="@+id/rltMyreview2"
        android:layout_marginTop="10dp"/>

</RelativeLayout>
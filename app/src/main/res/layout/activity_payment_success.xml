<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activity.PaymentSuccess">

    <TextView
        android:layout_width="226dp"
        android:layout_height="90dp"
        android:text="Thanh toán thành công"
        android:textSize="36dp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:layout_marginTop="50dp"/>
    <ImageView
        android:layout_width="268dp"
        android:layout_height="230dp"
        android:src="@drawable/cart"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"/>
    <TextView
        android:layout_width="283dp"
        android:layout_height="81dp"
        android:text="Đơn hàng của bạn sẽ được giao sớm. Cảm ơn bạn đã chọn ứng dụng của chúng tôi!"
        android:textAlignment="center"
        android:textSize="18dp"
        android:textStyle="italic"
        android:layout_marginTop="50dp"
        android:layout_gravity="center"/>
    <Button
        android:layout_width="335dp"
        android:layout_height="60dp"
        android:layout_marginTop="70dp"
        app:backgroundTint="@null"
        android:background="@drawable/boder"
        android:text="Xem đơn hàng"
        android:layout_gravity="center"
        android:textSize="18sp" />
    <Button
        android:layout_width="335dp"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        app:backgroundTint="@null"
        android:background="@drawable/boder_filter"
        android:text="Quay lại trang chủ"
        android:textColor="@color/black"
        android:layout_gravity="center"
        android:textSize="18sp" />

</LinearLayout>
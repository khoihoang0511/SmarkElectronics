<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="15dp">

    <RelativeLayout
        android:id="@+id/rltMyreview1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/imgMyreview"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/anh"/>
        <TextView
            android:id="@+id/txtNameMyReview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="tên sản phẩm"
            android:textSize="20dp"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/imgMyreview"/>
        <TextView
            android:id="@+id/txtProductPriceMyReview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="giá sản phâm"
            android:textSize="15dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:layout_below="@+id/txtNameMyReview"
            android:layout_toRightOf="@+id/imgMyreview"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rltMyreview2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rltMyreview1">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgstar1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/baseline_star_grey_24"/>
            <ImageView
                android:id="@+id/imgstar2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/baseline_star_grey_24"/>
            <ImageView
                android:id="@+id/imgstar3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/baseline_star_grey_24"/>
            <ImageView
                android:id="@+id/imgstar4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/baseline_star_grey_24"/>
            <ImageView
                android:id="@+id/imgstar5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/baseline_star_grey_24"/>
        </LinearLayout>
        <TextView
            android:id="@+id/txtDayMonthYear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="18/12/2004"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
    <TextView
        android:id="@+id/txtContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="nội dụng"
        android:layout_below="@+id/rltMyreview2"
        android:layout_marginTop="10dp"/>
</RelativeLayout>
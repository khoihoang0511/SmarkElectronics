<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_margin="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgfavorite"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_weight="2"
            android:src="@drawable/img_1"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="6">
            <TextView
                android:id="@+id/tvnamefavorite"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Apple Watch Series 9"
                android:textSize="17dp"
                android:inputType="textMultiLine"
                android:layout_marginTop="20dp"/>
            <TextView
                android:id="@+id/tvpricefavorite"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="11.290.000 Ä‘"
                android:textSize="19dp"
                android:textStyle="bold"
                android:layout_marginTop="5dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/white"
            android:layout_weight="4">

            <TextView
                android:id="@+id/txtdeletefavorite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/baseline_close"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                />

            <TextView
                android:id="@+id/txtaddcartfavorite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/baseline_shopping_bag"
                android:layout_gravity="center"
                android:layout_margin="20dp"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
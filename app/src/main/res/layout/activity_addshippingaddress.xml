<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".Activity.Addshippingaddress">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:orientation="horizontal"
        android:gravity="center">
        <ImageView
            android:id="@+id/imageBackAddShipPing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_arrow_back_ios_new_24"
            android:layout_gravity="center"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Thêm địa chỉ giao hàng"
            android:textSize="24dp"
            android:textStyle="bold"
            android:paddingLeft="43dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="335dp"
        android:layout_height="66dp"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:background="#f5f5f5"
        android:padding="5dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Họ và tên"/>
        <EditText
            android:id="@+id/edtNameAddShip"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="EX Nguyễn Văn A"
            android:background="@null"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="335dp"
        android:layout_height="66dp"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:background="#f5f5f5"
        android:padding="5dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Địa chỉ"/>
        <EditText
            android:id="@+id/edtAddressAddShip"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="EX:25 Robert Latouche Street"
            android:background="@null"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="335dp"
        android:layout_height="66dp"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:background="@drawable/vien"
        android:padding="5dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Số điện thoại"/>
        <EditText
            android:id="@+id/edtPhoneNumber"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="335dp"
        android:layout_height="66dp"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:background="#f5f5f5"
        android:padding="5dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Thành phố"/>
        <EditText
            android:id="@+id/edtCityAddShip"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="EX: Hồ Chí Minh"
            android:background="@null"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="335dp"
        android:layout_height="66dp"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:background="@drawable/vien"
        android:padding="5dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Quận/Huyên"/>
        <EditText
            android:id="@+id/edtDistrictAddShip"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="EX: Quận 12"
            android:background="@null"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="335dp"
        android:layout_height="66dp"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:background="#f5f5f5"
        android:padding="5dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Phường/Xã"/>
        <EditText
            android:id="@+id/edtWardAddShip"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="EX: Phường tân thới nhất"
            android:background="@null"/>
    </LinearLayout>
    <Button
        android:id="@+id/btnSaveAddressAddShip"
        android:layout_width="335dp"
        android:layout_height="60dp"
        android:layout_marginTop="50dp"
        app:backgroundTint="@null"
        android:background="@drawable/boder"
        android:text="Lưu địa chỉ"
        android:layout_gravity="center"
        android:textSize="18sp" />


</LinearLayout>